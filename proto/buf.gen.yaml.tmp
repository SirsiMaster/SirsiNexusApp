// Updated buf.gen.yaml to ensure V2 compatibility
version: v2
managed:
  enabled: true
plugins:
  # Go server + client
  - remote: buf.build/connectrpc/go:v1.18.1
    out: gen/go
    opt: paths=source_relative
  - remote: buf.build/protocolbuffers/go:v1.36.5
    out: gen/go
    opt: paths=source_relative
  # TypeScript client (React frontends) - Forcing V2
  - remote: buf.build/connectrpc/es:v1.6.1 # Wait, 1.6.1 IS what it used. I need to find the V2 one.
    out: gen/ts
    opt: target=ts
  - remote: buf.build/bufbuild/es:v2.2.3
    out: gen/ts
    opt: target=ts
