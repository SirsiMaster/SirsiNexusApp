{
  "name": "@sirsimaster/sirsi-ui",
  "version": "0.2.0",
  "description": "Sirsi UI â€“ shared React components, hooks, and design tokens for Sirsi applications.",
  "license": "MIT",
  "main": "dist/sirsi-ui.js",
  "module": "dist/sirsi-ui.esm.js",
  "types": "src/index.ts",
  "style": "dist/sirsi-ui.css",
  "exports": {
    ".": {
      "import": "./dist/sirsi-ui.esm.js",
      "require": "./dist/sirsi-ui.js",
      "types": "./src/index.ts"
    },
    "./components": {
      "import": "./src/components/index.ts",
      "types": "./src/components/index.ts"
    },
    "./hooks": {
      "import": "./src/hooks/index.ts",
      "types": "./src/hooks/index.ts"
    },
    "./css": "./dist/sirsi-ui.css"
  },
  "files": [
    "dist",
    "tailwind-preset.js",
    "src"
  ],
  "scripts": {
    "build:css": "tailwindcss -i src/css/index.css -o dist/sirsi-ui.css --minify || true",
    "build:js": "mkdir -p dist && cp src/js/components.js dist/sirsi-ui.js",
    "build": "npm run build:css && npm run build:js",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "firebase": "^10.0.0"
  },
  "peerDependenciesMeta": {
    "firebase": {
      "optional": true
    }
  },
  "devDependencies": {
    "tailwindcss": "^3.4.10",
    "@types/react": "^18.2.0"
  }
}